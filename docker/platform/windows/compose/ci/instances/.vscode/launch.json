{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Remote Debug",
          "type": "python",
          "request": "attach",
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}",
          "port": 5678,
          "host": "127.0.0.1",
          "stopOnEntry": false,
          "pathMappings": [
              {
                  "localRoot": "${workspaceFolder}",
                  "remoteRoot": "${workspaceFolder}"
              }
          ]
      }
  ]
}
